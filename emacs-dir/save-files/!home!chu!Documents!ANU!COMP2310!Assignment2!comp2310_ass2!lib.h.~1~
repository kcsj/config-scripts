#include <math.h>
#include <limits.h>
#include <stdio.h>
#include <unistd.h>
#include <string.h>
#include <stdlib.h>
#include <unistd.h>
#include <arpa/inet.h>
#include <sys/types.h>
#include <sys/socket.h>
#include <sys/wait.h>

#define MAX_BUFFER 256
#define TRUE 0
#define FALSE 1

struct Message {
  double value; /* square-root value */
  int return_port; /* client to return message to */
  int count; /* where the message is in the server ring */
};

int create_socket(int *fd_socket, int *port_socket);
int connect_port(int port_number, int *fd_out);
int send_fd(int fd_socket, char *buffer, int length);
int receive_fd(int fd_socket, char *buffer, int length);
int receive_message(int fd_socket, struct Message *message);
int send_message(int port_number, struct Message message);

